<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.enyata.framework.mvvm.ui.deposit.DepositActivity">

    <data>
        <variable
            name="viewModel"
            type="com.enyata.framework.mvvm.ui.deposit.DepositViewModel" />
    </data>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@drawable/ic_bg_pages"
            android:orientation="vertical">

            <ImageView
                android:onClick="@{()->viewModel.arrowDeposit()}"
                android:id="@+id/DepositArrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="33dp"
                app:srcCompat="@drawable/ic_arrow" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="25dp"
                android:orientation="horizontal"
                >


                <TextView
                    android:id="@+id/text1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato"
                    android:layout_marginTop="15dp"
                    android:lineHeight="20dp"
                    android:text="Jane Doe\n234561020940832"
                    android:textColor="#fff"
                    android:textStyle="bold" />


                <RelativeLayout
                    android:id="@+id/creditDetail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:gravity="end"



                   >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/lato"
                        android:text="Credit"
                        android:textColor="#fff"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="13dp"
                        android:fontFamily="@font/lato"
                        android:text="209.72"
                        android:textColor="#fff"
                        android:textSize="40sp" />

                    <TextView
                        android:id="@+id/ghc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/text"
                        android:fontFamily="@font/lato"
                        android:paddingLeft="8dp"
                        android:paddingTop="35dp"
                        android:text="ghc"
                        android:textAllCaps="true"
                        android:textColor="#fff"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </RelativeLayout>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="25dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lato"
                android:text="Deposit"
                android:textSize="24sp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/textInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"

                >

                <EditText
                    android:id="@+id/phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:drawableLeft="@drawable/ic_phone"
                    android:drawablePadding="20dp"
                    android:fontFamily="@font/lato"
                    android:gravity="start"
                    android:hint="Phone number"
                    android:inputType="number"
                    android:maxLength="11"
                    android:padding="15dp" />
                <TextView
                    android:id="@+id/hint"
                    android:layout_width="match_parent"
                    android:layout_height="19dp"
                    android:layout_marginTop="-8dp"
                    android:background="#2553CF"
                    android:fontFamily="@font/lato"
                    android:gravity="center"
                    android:text="*Enter phone number to request credit from"
                    android:textColor="#fff"
                    android:textSize="12sp"
                    android:visibility="gone" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <EditText
                    android:id="@+id/DepositCoin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:drawableLeft="@drawable/ic_coin"
                    android:drawablePadding="20dp"
                    android:fontFamily="@font/lato"
                    android:digits="0123456789"
                    android:maxLength="5"
                    android:gravity="start"
                    android:hint="0.00"
                    android:inputType="number"
                    android:padding="15dp" />

                <TextView
                    android:id="@+id/hintPassword"
                    android:layout_width="match_parent"
                    android:layout_height="19dp"
                    android:layout_marginTop="-8dp"
                    android:background="#2553CF"
                    android:fontFamily="@font/lato"
                    android:gravity="center"
                    android:text="*Receive this much in credit (same as amount of cash received)"
                    android:textColor="#fff"
                    android:textSize="12sp"
                    android:visibility="gone" />

            </LinearLayout>


            <Button
                android:onClick="@{()->viewModel.onDepositPin()}"
                android:id="@+id/depositButton"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/ic_deposit_layer"
                android:fontFamily="@font/lato"
                android:text="Deposit"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:textSize="16sp"
                android:textStyle="normal" />
        </LinearLayout>

    </LinearLayout>

</layout>