<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.enyata.framework.mvvm.ui.depositsucess.DepositSuccessActivity">

    <data>
        <variable
            name="viewModel"
            type="com.enyata.framework.mvvm.ui.depositsucess.DepositSuccessViewModel" />
    </data>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
       >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:orientation="vertical"
            android:background="@drawable/ic_bg_pages"
            >
            <ImageView
                android:onClick="@{()->viewModel.onArrowHome()}"
                android:id="@+id/arrow5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="25dp"
                app:srcCompat="@drawable/ic_arrow"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="25dp"
                android:orientation="horizontal"
                >


                <TextView
                    android:id="@+id/text1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato"
                    android:layout_marginTop="15dp"
                    android:lineHeight="20dp"
                    android:text="Jane Doe\n234561020940832"
                    android:textColor="#fff"
                    android:textStyle="bold" />


                <RelativeLayout
                    android:id="@+id/creditDetail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:gravity="end"



                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/lato"
                        android:text="Credit"
                        android:textColor="#fff"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="13dp"
                        android:fontFamily="@font/lato"
                        android:text="209.72"
                        android:textColor="#fff"
                        android:textSize="40sp" />

                    <TextView
                        android:id="@+id/ghc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/text"
                        android:fontFamily="@font/lato"
                        android:paddingLeft="8dp"
                        android:paddingTop="35dp"
                        android:text="ghc"
                        android:textAllCaps="true"
                        android:textColor="#fff"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </RelativeLayout>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lato"
                android:text="Deposit\nSuccessful"
                android:textSize="35sp"
                android:textColor="#263746"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:fontFamily="@font/lato"
                android:lineHeight="20dp"
                android:textColor="#263746"
                android:alpha="0.5"
                android:text="Transaction went smoothly. You have your cash and someone else has their credit. Yippie!"
                android:textSize="16sp"/>

            <Button
                android:onClick="@{()->viewModel.onHome()}"
                android:id="@+id/homeButton"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/lato"
                android:background="@drawable/ic_btn_layer"
                android:text="Back to Home"
                android:textSize="16sp"

                android:textAllCaps="false"
                android:textColor="#fff"
                />
        </LinearLayout>

    </LinearLayout>
</layout>