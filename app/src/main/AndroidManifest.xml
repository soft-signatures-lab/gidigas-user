<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.enyata.framework.mvvm">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".MvvmApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.confirmationsuccess.ConfirmSuccessActivity"></activity>
        <activity android:name=".ui.confirmationpage.ConfirmationPageActivity" />
        <activity android:name=".ui.withdrawalpin.WithdrawalPinActivity" />
        <activity android:name=".ui.depositsucess.DepositSuccessActivity" />
        <activity android:name=".ui.depositpin.DepositPinActivity" />
        <activity android:name=".ui.transactionhistory.TransactionHistoryActivity" />
        <activity android:name=".ui.withdrawal.WithdrawalActivity" />
        <activity android:name=".ui.deposit.DepositActivity" />
        <activity android:name=".ui.home.HomeActivity" />
        <activity android:name=".ui.setPin.SetPinActivity" />
        <activity android:name=".ui.splash.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.mainActivity.MainActivity"
            android:launchMode="singleTop" />
        <activity android:name=".ui.login.LoginActivity" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>